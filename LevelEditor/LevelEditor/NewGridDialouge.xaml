<Window x:Class="LevelEditor.Windows.NewGridDialouge"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:LevelEditor.Windows"
        mc:Ignorable="d"
        Title="New Grid" Height="200" Width="150">
    <StackPanel>
        <Label>Grid Width (Grid Boxes)</Label>
        <toolkit:IntegerUpDown x:Name="GridWidthSelection" Minimum="1" Maximum="200" Value="20"/>
        <Label>Grid Height (Grid Boxes)</Label>
        <toolkit:IntegerUpDown x:Name="GridHeightSelection" Minimum="1" Maximum="200" Value="20"/>
        <Label>Grid Box Size (px)</Label>
        <toolkit:IntegerUpDown x:Name="GridBoxSizeSelection" Minimum="1" Value="32"/>

        <Button Margin="0,5,0,0" Content="Ok" Click="OkButtonClick"/>
    </StackPanel>
</Window>
