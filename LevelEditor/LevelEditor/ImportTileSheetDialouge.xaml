<Window x:Class="LevelEditor.ImportTileSheetDialouge"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:LevelEditor.Windows"
        mc:Ignorable="d"
        Title="New Grid" Height="170" Width="150">
    <StackPanel>
        <Label>Tile Width (px)</Label>
        <toolkit:IntegerUpDown x:Name="TileWidthSelection" Minimum="1" Maximum="64" Value="32"/>
        <Label>Tile Height (px)</Label>
        <toolkit:IntegerUpDown x:Name="TileHeightSelection" Minimum="1" Maximum="64" Value="32"/>

        <Button Margin="0,5,0,0" Content="Ok" Click="OkButtonClick"/>
    </StackPanel>
</Window>
